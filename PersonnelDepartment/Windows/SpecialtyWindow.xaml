<Window x:Class="PersonnelDepartment.Windows.SpecialtyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonnelDepartment.Windows"
        mc:Ignorable="d"
        Title="Специальность" Height="170" Width="200" ResizeMode="NoResize">
    <Grid>

        <TextBlock Margin="50,0,0,90" VerticalAlignment="Center" HorizontalAlignment="Left"  Text="Специальность"/>
        <TextBox Margin="50,0,0,50" VerticalAlignment="Center" HorizontalAlignment="Left" Width="100" Name="SpecialtyTb"/>

        <TextBlock Margin="50,0,0,15" VerticalAlignment="Center" HorizontalAlignment="Left"  Text="Код специальности"/>
        <TextBox Margin="50,20,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="100" Name="CodeTb"/>
        
        <Button Margin="10,0,0,20" Width="80" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="Добавить" x:Name="Enter" Click="Enter_Click"/>
        <Button Margin="0,0,10,20" Width="80" VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Отменить" x:Name="Exit" Click="Exit_Click"/>
    </Grid>
</Window>
