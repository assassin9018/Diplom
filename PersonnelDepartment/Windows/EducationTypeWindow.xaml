<Window x:Class="PersonnelDepartment.Windows.EducationTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonnelDepartment.Windows"
        mc:Ignorable="d"
        Title="Тип образования" Height="150" Width="200" ResizeMode="NoResize">
    <Grid>

        <TextBlock Margin="50,0,0,60" VerticalAlignment="Center" HorizontalAlignment="Left"  Text="Тип образования"/>
        <TextBox Margin="50,0,0,25" VerticalAlignment="Center" HorizontalAlignment="Left" Width="100" Name="EducationTypeTb"/>

        <Button Margin="10,0,0,20" Width="80" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="Добавить" x:Name="Enter" Click="Enter_Click"/>
        <Button Margin="0,0,10,20" Width="80" VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Отменить" x:Name="Exit" Click="Exit_Click"/>
    </Grid>
</Window>
