<Window x:Class="PersonnelDepartment.Windows.ConnStringEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonnelDepartment.Windows"
        mc:Ignorable="d"
        Title="Строка подключения" Height="300" Width="300">
    <Grid>
        <TextBox Margin="10,10,10,50" TextWrapping="Wrap" Name="ConnectionTb"/>
        <Button Margin="10,0,0,20" Width="80" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="Изменить" x:Name="Enter" Click="Enter_Click"/>
        <Button Margin="0,0,10,20" Width="80" VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Отмена" x:Name="Exit" Click="Exit_Click"/>
    </Grid>
</Window>
